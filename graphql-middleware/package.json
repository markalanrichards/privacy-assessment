{
  "name": "graphql-middleware",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "lint": "prettier --write \"{src,test}/**\" ",
    "build":
      "npm run clean && mkdir -p avpr src/avpr  && ../setup-avprs.sh  && npm run jsavpr && tsc",
    "precommit": "lint-staged",
    "clean": "rimraf dist",
    "pretest": "npm run test-tsc",
    "test": "jest --no-cache",
    "test:watch": "npm run test -- --watch --no-cache",
    "test-tsc": "tsc -p test-tsconfig.json",
    "jsavpr": "node jsavpr.js",
    "copy-docker-template": "mkdir -p dist && cp -r docker-template/* dist/",
    "start:built": "node dist/src/main.js",
    "start":
      "npm run build && npm run test-tsc && npm run test && PORT=9000 node dist/src/main.js",
    "prod": "npm run build && npm run copy-docker-template",
    "watch": "watch \"npm run test\" src test"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,md}": [
      "prettier --no-config --parser typescript --write",
      "git add"
    ]
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/async": "2.0.47",
    "@types/express": "4.11.0",
    "@types/express-graphql": "0.0.35",
    "@types/graphql": "0.12.3",
    "@types/node": "9.3.0",
    "apollo-cache-inmemory": "1.1.7",
    "apollo-client": "2.2.2",
    "apollo-link-http": "1.3.2",
    "avro-js": "1.8.2",
    "babel-core": "6.26.0",
    "babel-jest": "22.1.0",
    "babel-preset-env": "1.6.1",
    "cors": "2.8.4",
    "express": "4.16.2",
    "express-graphql": "0.6.11",
    "graphql": "0.12.3",
    "graphql-tools": "2.19.0",
    "husky": "0.14.3",
    "jest": "22.1.4",
    "lint-staged": "6.0.1",
    "prettier": "1.10.2",
    "regenerator-runtime": "0.11.1",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "tslint-config-prettier": "1.6.0",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.6.2"
  }
}
