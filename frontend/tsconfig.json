{
  "compilerOptions": {
    "allowJs": true,

    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "_dist",
    "jsx": "react",
    "lib": ["dom", "es5", "es2015", "es2016", "esnext.asynciterable"]
  },
  "include": ["src/**/*", "server/**/*", "tests/**/*"],
  "exclude": ["node_modules", "**/node_modules"],
  "typeRoots": ["node_modules/@types"]
}
